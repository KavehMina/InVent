@using InVent.Components.Pages.Internals
@inherits BaseCarrierDialog

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.body2">@this.Header</MudText>
    </TitleContent>
    <DialogContent>
        @if (this.Carrier != null)
        {
            <MudForm ReadOnly>
                <MudTextField T="string"
                              Value="this.Carrier.Name"
                              Required
                              Label="نام شرکت"
                              Variant="Variant.Outlined">
                </MudTextField>
                <MudTextField T="string"
                              Value="this.Carrier.Phone"
                              Required
                              Label="تلفن شرکت"
                              Variant="Variant.Outlined">
                </MudTextField>
                <MudTextField T="string"
                              Value="this.Carrier.BankNumber"
                              Label="شماره حساب شرکت"
                              Variant="Variant.Outlined">
                </MudTextField>
                <MudTextField T="string"
                              Value="this.Carrier.Bank?.Name"
                              Label="بانک شرکت"
                              Variant="Variant.Outlined">
                </MudTextField>
            </MudForm>
        }
    </DialogContent>
    <DialogActions>
        @* <MudButton OnClick="this.Cancel">انصراف</MudButton> *@
        <MudButton Color="Color.Primary" OnClick="Cancel">بستن</MudButton>
    </DialogActions>
</MudDialog>