@using InVent.Components.Pages.Internals
@using InVent.Data.Models
@inherits BaseSupplierDialog

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.body2">@this.Header</MudText>
    </TitleContent>
    <DialogContent>
        @if (this.Supplier != null)
        {
            <div class="form-outer">
                <MudForm @ref=this.form @bind-IsValid="this.success" @bind-Errors="this.errors">
                    <div class="form-inner">
                        <MudTextField T="string"
                                      @bind-Value="this.Supplier.Name"
                                      Required
                                      Label="نام تأمین‌کننده"
                                      Variant="Variant.Outlined">
                        </MudTextField>
                    </div>
                </MudForm>
            </div>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="this.Cancel">انصراف</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">ویرایش</MudButton>
    </DialogActions>
</MudDialog>