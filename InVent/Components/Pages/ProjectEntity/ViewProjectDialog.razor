@using InVent.Components.Pages.Internals
@using InVent.Data.Models
@inherits BaseProjectDialog

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.body2">@this.Header</MudText>
    </TitleContent>
    <DialogContent>
        @if (this.Project != null)
        {
            <div class="form-outer">
                <MudForm ReadOnly>
                    <div class="form-inner">
                        <div class="field-group-3-custom">
                            <div class="switch-container">
                                <MudSwitch T="bool"
                                           Value=this.Project.Status
                                           Color="Color.Success"
                                           UncheckedColor="Color.Error"
                                           Label="@this.StatusText">
                                </MudSwitch>
                            </div>
                            <MudTextField T="int"
                                          Value="this.Project.Number"
                                          Required
                                          Label="شماره پروژه"
                                          Variant="Variant.Outlined">
                            </MudTextField>

                            <MudAutocomplete T="string"
                                             Value="this.Project.Customer?.Name"
                                             Label="مشتری"
                                             Variant="Variant.Outlined">
                            </MudAutocomplete>
                        </div>
                        <div class="field-group-2">
                            <MudAutocomplete T="string"
                                             Value="this.Project.Package?.Name"
                                             Label="بسته‌بندی"
                                             Variant="Variant.Outlined">
                            </MudAutocomplete>
                            <MudAutocomplete T="string"
                                             Value="this.Project.Product?.Name"
                                             Label="محصول"
                                             Variant="Variant.Outlined">
                            </MudAutocomplete>
                        </div>
                        <div class="field-group-2">
                            <MudTextField T="int"
                                          Value="this.Project.ProjectWeight"
                                          Format="N0"
                                          Immediate
                                          TextUpdateSuppression="false"
                                          Adornment="Adornment.End"
                                          AdornmentText="کیلوگرم"
                                          Label="وزن پروژه"
                                          Variant="Variant.Outlined">
                            </MudTextField>
                            <MudTextField T="int"
                                          Value="this.Project.PackageCount"
                                          Format="N0"
                                          Immediate
                                          TextUpdateSuppression="false"
                                          Label="تعداد بسته"
                                          Variant="Variant.Outlined">
                            </MudTextField>
                        </div>
                        <div class="field-group-2">
                            <MudAutocomplete T="string"
                                             Value="this.Project.Port?.Name"
                                             Label="گمرک خروج"
                                             Variant="Variant.Outlined">
                            </MudAutocomplete>
                            <MudAutocomplete T="string"
                                             Value="this.Project.Customs?.Name"
                                             Label="گمرک اظهار"
                                             Variant="Variant.Outlined">
                            </MudAutocomplete>
                        </div>
                    </div>
                </MudForm>
            </div>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">بستن</MudButton>
    </DialogActions>
</MudDialog>