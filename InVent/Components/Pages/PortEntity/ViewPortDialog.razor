@using InVent.Components.Pages.Internals
@inherits BasePortDialog

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.body2">@this.Header</MudText>
    </TitleContent>
    <DialogContent>

        <MudForm ReadOnly>
            <MudTextField T="string"
                          Value="this.Port.Name"
                          Required
                          Label="نام گمرک خروج"
                          Variant="Variant.Outlined">
            </MudTextField>
            <MudTextField T="int?"
                          Value="this.Port.Number"
                          Required
                          Label="شماره گمرک خروج"
                          Variant="Variant.Outlined">
            </MudTextField>

        </MudForm>

    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">بستن</MudButton>
    </DialogActions>
</MudDialog>