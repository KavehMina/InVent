@using InVent.Components.Pages.Internals
@using InVent.Data.Models
@inherits BaseDeliveryOrderDialog

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.body2">@this.Header</MudText>
    </TitleContent>
    <DialogContent>
        @if (this.DeliveryOrder != null)
        {
            <div class="form-outer">
                <MudForm ReadOnly>
                    <div class="form-inner">
                        <div class="field-group-2-custom">
                            <div class="switch-container">
                                <MudSwitch T="bool"
                                           @bind-Value=this.DeliveryOrder.Status
                                           Color="Color.Success"
                                           UncheckedColor="Color.Error"
                                           Label="@this.StatusText">
                                </MudSwitch>
                            </div>
                            <MudTextField T="string"
                                          Value="this.DeliveryOrder.DeliveryOrderId"
                                          Label="شماره حواله"
                                          Variant="Variant.Outlined">
                            </MudTextField>
                        </div>
                        <MudAutocomplete T="string"
                                         Value="this.DeliveryOrder.Project?.Number.ToString()"
                                         Label="شماره پروژه"
                                         Variant="Variant.Outlined">
                        </MudAutocomplete>
                        <MudTextField T="int"
                                      Value="this.DeliveryOrder.Weight"
                                      Format="N0"
                                      Immediate
                                      TextUpdateSuppression="false"
                                      Adornment="Adornment.End"
                                      AdornmentText="کیلوگرم"
                                      Label="وزن حواله"
                                      Variant="Variant.Outlined">
                        </MudTextField>
                        <MudTextField T="int"
                                      Value="this.DeliveryOrder.TankerFare"
                                      Format="N0"
                                      Immediate
                                      TextUpdateSuppression="false"
                                      Adornment="Adornment.End"
                                      AdornmentText="تومان"
                                      Label="کرایه تانکر"
                                      Variant="Variant.Outlined">
                        </MudTextField>
                    </div>
                </MudForm>
            </div>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">بستن</MudButton>
    </DialogActions>
</MudDialog>