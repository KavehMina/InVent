@using InVent.Components.Pages.Internals
@inherits BaseBankComponent

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.body2">@this.Header</MudText>
    </TitleContent>
    <DialogContent>
        @if (this.Bank != null)
        {
            <MudTextField T="string"
                          @bind-Value="this.TempBankName"
                          Style="direction:rtl;text-align:right"
                          Label="نام بانک"
                          Variant="Variant.Outlined">
            </MudTextField>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">انصراف</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">ویرایش</MudButton>
    </DialogActions>
</MudDialog>
